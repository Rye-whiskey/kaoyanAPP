<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/item_tx"
        android:src="@drawable/tx"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <RelativeLayout
        android:id="@+id/item_line"
        android:layout_toRightOf="@+id/item_tx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/item_line1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_title"
                android:text="大吉大利晚上吃鸡"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>


            <TextView
                android:id="@+id/item_time"
                android:text="30分钟前"
                android:textSize="13dp"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:paddingTop="5dp"
            android:layout_below="@+id/item_line1"
            android:layout_width="300dp"
            android:textSize="13dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="今天晚上天气很好，一起去吃鸡吧"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:paddingTop="5dp"
            android:id="@+id/item_line3"
            android:layout_below="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关键字："
                android:textSize="13dp"/>

            <TextView
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/key"
                android:id="@+id/item_key"
                android:text="吃鸡666"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>




</RelativeLayout>